Subject: [PATCH] arm64: dts: renesas: eViewItf mfis driver

---
 arch/arm64/boot/dts/renesas/r8a77980-ecube.dtsi | 14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/r8a77980-ecube.dtsi b/arch/arm64/boot/dts/renesas/r8a77980-ecube.dtsi
index 331f755..616e01d 100644
--- a/arch/arm64/boot/dts/renesas/r8a77980-ecube.dtsi
+++ b/arch/arm64/boot/dts/renesas/r8a77980-ecube.dtsi
@@ -157,6 +157,20 @@
 		#size-cells = <2>;
 		ranges;
 
+		eviewitf-mfis@e6260000 {
+			compatible = "eviewitf-mfis";
+			reg = <0 0xe6260000 0 0x1000>;
+			#hwlock-cells = <1>;
+			interrupts = <GIC_SPI 224 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 225 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 226 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 227 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 228 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 229 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 230 IRQ_TYPE_LEVEL_HIGH
+				      GIC_SPI 231 IRQ_TYPE_LEVEL_HIGH>;
+		};
+
 		rwdt: watchdog@e6020000 {
 			compatible = "renesas,r8a77980-wdt",
 				     "renesas,rcar-gen3-wdt";
